<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EBF4"
    android:padding="16dp">
    <EditText
        android:id="@+id/guardianLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of guardian "
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/guardianNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter emergency contact number"
        android:inputType="phone"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/guardianLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonAddNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save "
        android:textColor="#FFFFFF"
        android:layout_below="@+id/guardianNumber"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
